<configuration>
  <springProfile name="local">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <pattern>
          %d{HH:mm:ss.SSSS} [%thread] %-5level %logger{36} - %msg%n
        </pattern>
      </encoder>
    </appender>

    <logger name="com.gitenter" level="DEBUG" />

    <root level="INFO">
      <appender-ref ref="STDOUT" />
    </root>
  </springProfile>

  <springProfile name="docker | staging | production">
    <property name="HOME_LOG" value="logs/gitenter.log"/>

    <appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>${HOME_LOG}</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>logs/archived/gitenter.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
        <!-- each archived file, size max 10MB -->
        <maxFileSize>10MB</maxFileSize>
        <!-- total size of all archive files, if total size > 20GB, it will delete old archived file -->
        <totalSizeCap>20GB</totalSizeCap>
        <!-- 60 days to keep -->
        <maxHistory>60</maxHistory>
      </rollingPolicy>
      <encoder>
        <pattern>
          %d{YYYY/MM/dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
        </pattern>
      </encoder>
    </appender>

    <root level="INFO">
      <appender-ref ref="FILE-ROLLING" />
    </root>
  </springProfile>
</configuration>
